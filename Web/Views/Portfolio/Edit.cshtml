@model PortfolioViewModel
@{ ViewData["Title"] = "Edit";}
<div style="padding:120px;">
    <h2>Create</h2>

    <div class="raw">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        
                <div class="form-group">
                    <label asp-for="ProgectName" class="control-label"></label>
                    <input asp-for="ProgectName" class="form-control" />
                    <span asp-validation-for="ProgectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit"  class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>


</div>
